<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="398dp"
        android:layout_height="273dp"
        android:layout_margin="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="7dp"
        app:cardBackgroundColor="#e0dede"
        app:cardCornerRadius="3dp"
        app:contentPadding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/kz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="Қазақыстан"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/world"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="Дүние жүзі"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Жалпы саны"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.507"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Бүгін қосылғандар"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/all"
                app:layout_constraintStart_toStartOf="@+id/all"
                app:layout_constraintTop_toBottomOf="@+id/all" />

            <TextView
                android:id="@+id/rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Жазылғандар"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/today"
                app:layout_constraintStart_toStartOf="@+id/today"
                app:layout_constraintTop_toBottomOf="@+id/today" />

            <TextView
                android:id="@+id/death"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Қайтыс болғандар"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/rec"
                app:layout_constraintStart_toStartOf="@+id/rec"
                app:layout_constraintTop_toBottomOf="@+id/rec" />

            <TextView
                android:id="@+id/today_death"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Бүгін  Қайтыс болғандар"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/rec"
                app:layout_constraintHorizontal_bias="0.548"
                app:layout_constraintStart_toStartOf="@+id/rec"
                app:layout_constraintTop_toBottomOf="@+id/rec" />

            <TextView
                android:id="@+id/allnum_kz"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="@+id/all"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/all" />

            <TextView
                android:id="@+id/today_kz"
                android:layout_width="65dp"
                android:layout_height="0dp"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="@+id/today"
                app:layout_constraintEnd_toEndOf="@+id/allnum_kz"
                app:layout_constraintStart_toStartOf="@+id/allnum_kz"
                app:layout_constraintTop_toTopOf="@+id/today"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/recovery_kz"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="@+id/rec"
                app:layout_constraintEnd_toEndOf="@+id/today_kz"
                app:layout_constraintStart_toStartOf="@+id/today_kz"
                app:layout_constraintTop_toTopOf="@+id/rec" />

            <TextView
                android:id="@+id/death_kz"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="@+id/death"
                app:layout_constraintEnd_toEndOf="@+id/recovery_kz"
                app:layout_constraintStart_toStartOf="@+id/recovery_kz"
                app:layout_constraintTop_toTopOf="@+id/death"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/allnum_world"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="@+id/all"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/all" />

            <TextView
                android:id="@+id/today_world"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="@+id/today"
                app:layout_constraintEnd_toEndOf="@+id/allnum_world"
                app:layout_constraintStart_toStartOf="@+id/allnum_world"
                app:layout_constraintTop_toTopOf="@+id/today" />

            <TextView
                android:id="@+id/recovery_world"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="@+id/rec"
                app:layout_constraintEnd_toEndOf="@+id/today_world"
                app:layout_constraintStart_toStartOf="@+id/today_world"
                app:layout_constraintTop_toTopOf="@+id/rec" />

            <TextView
                android:id="@+id/death_world"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="@+id/death"
                app:layout_constraintEnd_toEndOf="@+id/recovery_world"
                app:layout_constraintStart_toStartOf="@+id/recovery_world"
                app:layout_constraintTop_toTopOf="@+id/death" />

            <TextView
                android:id="@+id/Todaydeath_kz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                app:layout_constraintBottom_toBottomOf="@+id/today_death"
                app:layout_constraintEnd_toEndOf="@+id/death_kz"
                app:layout_constraintStart_toStartOf="@+id/death_kz"
                app:layout_constraintTop_toTopOf="@+id/today_death" />

            <TextView
                android:id="@+id/Todaydeath_world"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="@+id/today_death"
                app:layout_constraintEnd_toEndOf="@+id/death_world"
                app:layout_constraintStart_toStartOf="@+id/death_world"
                app:layout_constraintTop_toTopOf="@+id/today_death" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="398dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardBackgroundColor="#e0dede"
        app:contentPaddingTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_edittext">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="330dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/coutry_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="countryName"
                android:textAlignment="center"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="32dp"
                android:text="Жалпы саны"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/all_s"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Бүгін қосылғандар"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/all"
                app:layout_constraintStart_toStartOf="@+id/all"
                app:layout_constraintTop_toBottomOf="@+id/all"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/rec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Жазылғандар"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/today"
                app:layout_constraintStart_toStartOf="@+id/today"
                app:layout_constraintTop_toBottomOf="@+id/today"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/death"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Қайтыс болғандар"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/rec"
                app:layout_constraintStart_toStartOf="@+id/rec"
                app:layout_constraintTop_toBottomOf="@+id/rec"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/Todaydeath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Бүгін  Қайтыс болғандар"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/death"
                app:layout_constraintStart_toStartOf="@+id/death"
                app:layout_constraintTop_toBottomOf="@+id/death"
                tools:ignore="DuplicateIds" />

            <TextView
                android:id="@+id/all_s"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="@+id/all"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/all"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/today_s"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="@+id/today"
                app:layout_constraintEnd_toEndOf="@+id/all_s"
                app:layout_constraintTop_toTopOf="@+id/today" />

            <TextView
                android:id="@+id/rec_s"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="@+id/rec"
                app:layout_constraintEnd_toEndOf="@+id/today_s"
                app:layout_constraintTop_toTopOf="@+id/rec" />

            <TextView
                android:id="@+id/death_s"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="@+id/death"
                app:layout_constraintEnd_toEndOf="@+id/rec_s"
                app:layout_constraintTop_toTopOf="@+id/death" />

            <TextView
                android:id="@+id/Todaydeath_s"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="@+id/Todaydeath"
                app:layout_constraintStart_toStartOf="@+id/death_s"
                app:layout_constraintTop_toTopOf="@+id/Todaydeath" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <EditText

        android:id="@+id/search_edittext"
        android:layout_width="371dp"
        android:layout_height="45dp"
        android:layout_marginTop="52dp"
        android:hint="Мемілекет атын(Ағылшын тілінде)"
        android:textAlignment="center"
        android:textSize="17dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />

    <ImageButton
        android:id="@+id/searchBTN"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginBottom="4dp"
        android:scrollbarSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/search_edittext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/search_edittext"
        app:layout_constraintVertical_bias="0.555"
        app:srcCompat="@android:drawable/ic_search_category_default" />

</androidx.constraintlayout.widget.ConstraintLayout>